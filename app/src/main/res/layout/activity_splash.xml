<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_splash_background_color"
    tools:ignore="ExtraText">



    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Eesti Materjalid"
        android:textColor="@color/activity_splash_text_color"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splashSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Õpi eesti keelt rõõmuga!"
        android:textColor="@color/activity_splash_text_color"
        android:textSize="14sp" />


    <!-- пустота -->
    <View
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_weight="0" />

    <!-- подпись мой -->
    <TextView
        android:id="@+id/createdBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Created by Fuad Ismayilbayli"
        android:textColor="@color/activity_splash_text_color"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>
