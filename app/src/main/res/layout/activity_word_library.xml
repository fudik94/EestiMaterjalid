<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".WordLibraryActivity">

    <!-- Пустое место под фронтальную камеру -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Header with title and close button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_library_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/closeLibraryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="❌"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp" />

    </RelativeLayout>

    <!-- Create Word Button -->
    <Button
        android:id="@+id/createWordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_word_button"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@android:drawable/ic_input_add"
        android:drawablePadding="12dp" />

    <!-- Edit Word Button -->
    <Button
        android:id="@+id/editWordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_word_button"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:drawablePadding="12dp" />

    <!-- Delete Word Button -->
    <Button
        android:id="@+id/deleteWordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_word_button"
        android:textSize="18sp"
        android:padding="20dp"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:drawablePadding="12dp" />

</LinearLayout>
