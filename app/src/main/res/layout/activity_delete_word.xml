<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DeleteWordActivity">

    <!-- Пустое место под фронтальную камеру -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Header with title and exit button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_word_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/deleteCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="❌"
            android:textSize="20sp"
            android:minWidth="48dp"
            android:minHeight="48dp" />

    </RelativeLayout>

    <!-- Select Word Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_word_to_delete"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/deleteWordSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:padding="12dp" />

    <!-- Word Details Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/wordDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:text="Select a word to see details" />

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Delete Button -->
    <Button
        android:id="@+id/deleteWordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_word_confirm_button"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#F44336" />

</LinearLayout>
